<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/cardview_layout_LR_padding"
    android:paddingRight="@dimen/cardview_layout_LR_padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingRight="8dp"
            android:id="@+id/business_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/business_name"
                    android:textSize="16sp"
                    android:text="Business Name"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="105.1333dp"
                        android:layout_height="19dp"
                        android:scaleType="centerInside"
                        android:contentDescription="rating"
                        android:id="@+id/business_rating"/>
                    <TextView
                        android:paddingLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:id="@+id/business_review_count"
                        style="@style/Base.TextAppearance.AppCompat.Caption"
                        android:text="x Reviews"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/business_address"
                    android:text="Address"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/business_categories"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:text="Categories"/>

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/button_like"
        android:foreground="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:text="LIKE"
        android:background="@color/cardview_light_background"
        android:textSize="@dimen/cardview_buttons"
        android:textColor="@color/material_text_gray"
        android:drawableTop="@drawable/ic_thumb_up_black_24px"/>

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/button_toosoon"
        android:foreground="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:text="TOO SOON"
        android:background="@color/cardview_light_background"
        android:textSize="@dimen/cardview_buttons"
        android:textColor="@color/material_text_gray"
        android:drawableTop="@drawable/ic_schedule_black_24px"/>

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/button_dontlike"
        android:foreground="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:text="DON'T LIKE"
        android:background="@color/cardview_light_background"
        android:textSize="@dimen/cardview_buttons"
        android:textColor="@color/material_text_gray"
        android:drawableTop="@drawable/ic_thumb_down_black_24px"/>

    </LinearLayout>
