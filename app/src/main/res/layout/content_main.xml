<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lipata.whatsforlunch.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="LATITUDE"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LONGITUDE"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="ACCURACY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/latitude_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:freezesText="true"
            android:text="No data" />

        <TextView
            android:id="@+id/longitude_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:freezesText="true"
            android:text="No data" />

        <TextView
            android:id="@+id/accuracy_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:freezesText="true"
            android:text="No data" />

    </LinearLayout>

    <TextView
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_gray_100"
        android:gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Medium"
        android:text="F O O D   O P T I O N S"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/material_gray_100"
        android:paddingBottom="1dp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_gray_100"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="powered by"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:src="@drawable/yelp_logo_xsmall_2"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="20dp"
            />
        </LinearLayout>
    </FrameLayout>

    <!-- Temporarily disabling swipe to refresh in lieu of FAB
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        -->

        <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin_thin"
        android:paddingRight="@dimen/activity_horizontal_margin_thin"
        android:scrollbars="vertical"
        android:background="@color/material_gray_100"
        android:id="@+id/suggestion_list"/>
<!--
</android.support.v4.widget.SwipeRefreshLayout>

-->

</LinearLayout>
