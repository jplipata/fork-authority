<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/material_gray_100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:paddingLeft="@dimen/location_padding"
            android:freezesText="true"
            android:text="location" />

        <ImageView
            android:id="@+id/accuracy_circle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/circle"
            android:scaleType="center"
            android:paddingRight="@dimen/location_padding"
            android:layout_centerVertical="true" />


    </RelativeLayout>




    <TextView
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_gray_100"
        android:gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Medium"
        android:text="F O O D   O P T I O N S"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/material_gray_100"
        android:paddingBottom="1dp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_gray_100"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="powered by"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:src="@drawable/yelp_logo_xsmall_2"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="20dp"
            />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/progressbar_layout"
        android:background="@color/material_gray_100"
        android:padding="@dimen/location_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getting_your_location"
            android:id="@+id/textview_progress_location"/>

        <ProgressBar
            android:id="@+id/progress_bar_location"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_businesses"
            android:id="@+id/textview_progress_loadbusinesses"/>

        <ProgressBar
            android:id="@+id/progress_bar_businesses"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"/>


    </LinearLayout>

        <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin_thin"
        android:paddingRight="@dimen/activity_horizontal_margin_thin"
        android:scrollbars="vertical"
        android:background="@color/material_gray_100"
        android:id="@+id/suggestion_list"/>

</LinearLayout>
